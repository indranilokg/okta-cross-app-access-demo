{
  "name": "atko-document-server-mcp-auth",
  "version": "1.1.0",
  "description": "OAuth 2.0 Authorization Server for MCP Cross-App Access with ID-JAG Token Support",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "clean": "rm -rf dist",
    "test:id-jag": "node test-id-jag-auth.js",
    "build:lambda": "tsc && cp package.json dist/ && cd dist && npm install --production"
  },
  "keywords": [
    "mcp",
    "oauth",
    "authorization",
    "jwt",
    "atko",
    "id-jag",
    "cross-app-access",
    "identity-assertion",
    "lambda",
    "aws"
  ],
  "author": "Atko Corporation",
  "license": "MIT",
  "dependencies": {
    "atko-cross-app-access-sdk": "^1.0.0-beta.1",
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.0",
    "jose": "^5.0.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.152",
    "@types/cors": "^2.8.0",
    "@types/express": "^4.17.0",
    "@types/node": "^20.0.0",
    "@types/uuid": "^9.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  }
}
