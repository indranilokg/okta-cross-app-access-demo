{
  "version": 2,
  "builds": [
    {
      "src": "src/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/mcp/auth/(.*)",
      "dest": "/src/index.ts"
    }
  ],
  "functions": {
    "src/index.ts": {
      "maxDuration": 30
    }
  },
  "env": {
    "JWT_SECRET": "@jwt_secret",
    "OKTA_ISSUER": "@okta_issuer",
    "ID_JAG_AUDIENCE": "@id_jag_audience",
    "NODE_ENV": "production"
  }
} 